{
  "name": "react-project",
  "description": "Effective environment for frontend development",
  "repository": "https://LyulyaevMaxim@github.com/LyulyaevMaxim/react-project.git",
  "author": "Lyulyaev Maxim",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./",
    "./linters",
    "./tests",
    "./storybook"
  ],
  "scripts": {
    "start": "onchange '**/*.*' -- prettier --write {{changed}} & cross-env NODE_ENV=development webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack",
    "server": "cd server && yarn start",
    "deploy": "cd server && now -d --public",
    "test": "cross-env NODE_ENV=test jest --config ./tests/jest.config.js",
    "storybook:start": "cross-env NODE_ENV=development start-storybook -p 9001 -c ./storybook",
    "storybook:build": "cross-env NODE_ENV=production build-storybook -c ./storybook -o ./storybook/dist",
    "version-increment": "perl -i -pe 's/^((\\d+\\.)*)(\\d+)(.*)$/$1.($3+1).$4/e' < version.num version.num",
    "dockerbuild": "yarn version-increment && yarn build && sudo docker build -t lyulyaevma/react-project:$(cat version.num) . && sudo docker push lyulyaevma/react-project:$(cat version.num)",
    "install-packages": "yarn install && cd ./src && yarn install && cd ../server && yarn install",
    "upgrade-packages": "yarn upgrade-interactive --latest && cd ./src && yarn upgrade-interactive --latest && cd ../server && yarn upgrade-interactive --latest",
    "lint:js": "eslint --fix src/js --ext .js,.jsx && tslint --project ./tsconfig.json --config ./linters/tslint.json ./src/js/**/*.{ts,tsx} && tsc --noEmit",
    "lint:css": "stylelint --fix src/**/*.{css,pcss} --cache --cache-location ./node_modules/.stylelintcache",
    "devtools": "yarn react-devtools"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "stylelint": {
    "extends": "./linters/.stylelintrc.js"
  },
  "eslintConfig": {
    "extends": "./linters/.eslintrc.js"
  },
  "lint-staged": {
    "src/js/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "yarn lint:js",
      "git add"
    ],
    "src/**/*.{css,pcss}": [
      "prettier --write",
      "yarn lint:css",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "dependencies": {
    "babel-loader": "^8.0.5",
    "cache-loader": "^2.0.1",
    "clean-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^5.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "^3.0.1",
    "happypack": "^5.0.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-webp": "^5.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.5.0",
    "modernizr": "^3.7.0",
    "modernizr-loader": "^1.0.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "workbox-webpack-plugin": "^4.0.0"
  },
