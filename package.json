{
  "name": "react-project",
  "description": "Fast and effective environment for frontend development",
  "repository": "https://LyulyaevMaxim@github.com/LyulyaevMaxim/react-project.git",
  "author": "Maxim Lyulyaev",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "workspaces": [
    "src/**/**",
    "storybook"
  ],
  "scripts": {
    "start": "cd webpack && yarn start",
    "build": "cd webpack && yarn build",
    "test": "cd webpack && yarn test",
    "server": "cd server && yarn start",
    "deploy": "cd server && now -d --public",
    "storybook": "cd storybook && yarn start",
    "version-increment": "perl -i -pe 's/^((\\d+\\.)*)(\\d+)(.*)$/$1.($3+1).$4/e' < version.num version.num",
    "dockerbuild": "yarn version-increment && yarn build && sudo docker build -t lyulyaevma/react-project:$(cat version.num) . && sudo docker push lyulyaevma/react-project:$(cat version.num)",
    "install-packages": "yarn install && cd webpack && yarn install && cd ../server && yarn install && cd ../storybook && yarn install",
    "upgrade-packages": "yarn upgrade-interactive --latest && cd ./webpack && yarn upgrade-interactive --latest && cd ../server && yarn upgrade-interactive --latest && cd ../storybook && yarn upgrade-interactive --latest",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again",
    "lint:js": "eslint --fix src/js",
    "lint:css": "stylelint --fix src/**/*.{css,scss} --cache --cache-location './node_modules/.stylelintcache'"
  },
  "lint-staged": {
    "src/js/**/*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "yarn lint:css",
      "prettier --write",
      "git add"
    ]
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-esnext": "^4.0.0",
    "eslint-config-jest-enzyme": "^7.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.2.2",
    "prettier": "^1.13.7",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-high-performance-animation": "^1.1.1",
    "stylelint-no-unsupported-browser-features": "^3.0.1",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.0"
  }
}
