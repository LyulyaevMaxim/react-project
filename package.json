{
	"name": "react-project",
	"description": "Fast and effective environment for frontend development",
	"author": "Maxim Buslaev",
	"version": "$(cat version.num)",
	"scripts": {
		"start":
			"cp src/index.html dist/index.html && webpack-dev-server --open --config webpack.dev.js",
		"build":
			"webpack --config webpack.prod.js && cp src/index.html dist/index.html",
		"dockerbuild":
			"yarn build && sudo docker build -t lyulyaevma/react-project:$(cat version.num) . && sudo docker push lyulyaevma/react-project:$(cat version.num)",
		"eslint-check":
			"eslint --print-config .eslintrc.js | eslint-config-prettier-check",
		"precommit": "lint-staged"
	},
	"dependencies": {
		"history": "^4.7.2",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-redux": "^5.0.6",
		"react-router-dom": "^4.2.2",
		"react-router-redux": "^4.0.8",
		"redux": "^3.7.2",
		"redux-thunk": "^2.2.0",
		"reselect": "^3.0.1",
		"superagent": "^3.8.2"
	},
	"devDependencies": {
		"autoprefixer": "^7.2.4",
		"babel-eslint": "^8.2.1",
		"clean-webpack-plugin": "^0.1.17",
		"css-loader": "^0.28.8",
		"eslint": "^4.15.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-react-app": "^2.0.1",
		"eslint-config-standard": "^11.0.0-beta.0",
		"eslint-plugin-flowtype": "^2.41.0",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-node": "^5.2.1",
		"eslint-plugin-prettier": "^2.4.0",
		"eslint-plugin-promise": "^3.6.0",
		"eslint-plugin-react": "^7.5.1",
		"eslint-plugin-standard": "^3.0.1",
		"file-loader": "^1.1.6",
		"lint-staged": "^6.0.0",
		"lodash": "^4.17.4",
		"path": "^0.12.7",
		"prettier": "^1.10.0",
		"prettierrc": "^0.0.0-5",
		"style-loader": "^0.19.1",
		"uglifyjs-webpack-plugin": "^1.1.6",
		"webpack": "^3.10.0",
		"webpack-cli": "^2.0.2",
		"webpack-dev-server": "^2.10.1",
		"webpack-merge": "^4.1.1",
		"yargs": "yargs/yargs"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
	},
	"babel": {
		"presets": ["react-app"]
	},
	"repository":
		"https://maxim-buslaev@github.com/maxim-buslaev/react-project.git",
	"license": "MIT"
}
