/* ----------- ШРИФТЫ ----------- */
$MuseoSans: 'Museo Sans', sans-serif;
$FontThin: 100;
$FontUltraLight: 200;
$FontLight: 300;
$FontRegular: 400;
$FontMedium: 500;
$FontDemi: 600;
$FontBold: 700;
$FontHeavy: 800;
$FontBlack: 900;

$font-size-1: 16px;
$font-size-2: 20px;
$font-size-3: 24px;
$font-size-4: 28px;
$font-size-5: 32px;
$font-size-6: 36px;

/* ----------- ЦВЕТА ----------- */
$color-white: hsl(0, 0%, 100%);
$color-black-classic: hsl(0, 0%, 0%);
$color-black-faded: hsl(120, 3%, 23%);
$color-black-light: hsl(0, 0%, 31%);
$color-gray: hsl(0, 0%, 68%);
$color-green: hsl(138, 66%, 40%);
$color-green-light: hsl(138, 54%, 49%);
$color-pink: hsl(6, 100%, 69%);
$color-gold: hsl(42, 100%, 74%);
$color-blue: hsl(204, 61%, 65%);
$color-blue-light: hsl(196, 65%, 97%);
$color-purple: hsl(316, 50%, 63%);

/* ----------- РАЗРЕШЕНИЯ ЭКРАНА ----------- */
$mobile: 320px;
$tablet: 768px;
$desktop: 1024px;
$big-desktop: 1440px;

@custom-media --tablet ($tablet <= width < $desktop);
@custom-media --min-tablet (width >= $tablet);
@custom-media --max-tablet (width < $tablet);

@custom-media --desktop ($desktop <= width < $big-desktop);
@custom-media --min-desktop (width >= $desktop);
@custom-media --max-desktop (width < $desktop);

@custom-media --min-big-desktop (width <= $big-desktop);
@custom-media --big-desktop (width >= $big-desktop);

/* ----------- PADDINGS/MARGINS ----------- */
$margin-mobile: 20px;
$margin-tablet: 34px;
$margin-desktop: 76px;
$margin-big-desktop: 14vw;
