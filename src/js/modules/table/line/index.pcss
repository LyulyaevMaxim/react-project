@import '~css/variables.pcss';

.line {
  align-items: center;
  border-bottom: 1px solid;
  display: grid;
  grid-gap: 10px;
  justify-content: space-between;
  min-height: 40px;
  padding: 0 20px 0 10px;
  text-align: center;

  & > div > * {
    max-width: 100%;
  }

  &:first-child {
    background-color: var(--fonColor);
    left: 0;
    position: sticky;
    top: 0;
    z-index: 1;
  }

  &:not(:first-child) {
    background-color: $color-blue-light;
    border-color: $color-gray;

    .is-unsaved {
      background-color: $color-gray;
    }
  }
}

.action-button {
  &.edit-button {
  }

  &.cancel-button {
  }

  &.disabled {
  }
}
