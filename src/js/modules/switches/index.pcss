switches-container {
  display: block;
}

switches-content {
  display: block;
}

switches-content > aside > label,
switches-content > section > label {
  display: inline-block;
  cursor: pointer;
}

switches-content > section {
  & > input {
    position: absolute;
    pointer-events: none;
    opacity: 0;

    &:checked + switchable-block {
      display: block;
    }
  }

  & > label {
    display: none;
  }
}

switchable-block {
  display: none;
  width: 100%;
}