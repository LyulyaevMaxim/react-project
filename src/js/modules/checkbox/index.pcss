.checkbox-input {
  display: none;

  &:checked + .checkbox-label {
    border-color: hsl(146, 64%, 36%);
    background-image: url('icon-checked.svg', param(--color hsl(146, 64%, 36%)));
  }
}

.checkbox-label {
  display: inline-flex;
  background-repeat: no-repeat;
  background-position: 50%;
  min-width: 36px;
  min-height: 36px;
  width: 36px;
  height: 36px;
  border: 2px solid hsl(225, 21%, 89%);
  transition: border-color 0.3s, background-image 0.3s;
}

