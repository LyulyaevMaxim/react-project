}

.addEventButton,
.deleteEventsButton,
.searchEventsButton {
  background-color: transparent;
  border: initial;
}

.addEventButton,
.deleteEventsButton {
  transition: filter 0.3s;
  &:not(:disabled) {
    cursor: pointer;
    filter: opacity(1);
  }
  &:disabled {
    filter: opacity(0.4);
  }
}

.addEventButton {
  margin-left: 9px;
  &::before {
    content: '+';
    font-size: $font-size-3;
  }
}
.addEventButton + .deleteEventsButton {
  margin-left: 16px;
}

